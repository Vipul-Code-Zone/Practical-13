@model IEnumerable<PracticalThirteenTest2.Models.Designation>

@{
    ViewBag.Title = "Index";
}


<h2 class="text-center">Designation List</h2>
<div class="d-flex justify-content-center">
    <hr class="w-25" />
</div>

<p>
    @Html.ActionLink("Create New", "Create", string.Empty, htmlAttributes: new { @class = "btn btn-sm btn-info" })
    @Html.ActionLink("Employees", "Index", "Employees", string.Empty, htmlAttributes: new { @class = "btn btn-sm btn-dark ms-2" })
</p>

@if (TempData["UpdateSuccess"] != null)
{
    <p class="text-success toast-msg">@TempData["UpdateSuccess"]</p>
}
@if (TempData["AddSuccess"] != null)
{
    <p class="text-success toast-msg">@TempData["AddSuccess"]</p>
}
@if (TempData["deletedSuccess"] != null)
{
    <p class="text-danger toast-msg">@TempData["deletedSuccess"]</p>
}
<table class="table table-striped table-hover">
    <tr class="text-center table-dark">
        <th>
            @Html.DisplayNameFor(model => model.Designations)
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="text-center">
            <td>
                @Html.DisplayFor(modelItem => item.Designations)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-sm btn-primary" }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-sm btn-info" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-sm btn-danger" })
            </td>
        </tr>
    }

</table>

@section scripts {
    <script>
        $(document).ready(function () {
            setTimeout(function () {
                $('.toast-msg').delay(2000).hide(0);
            });
        });
    </script>
}