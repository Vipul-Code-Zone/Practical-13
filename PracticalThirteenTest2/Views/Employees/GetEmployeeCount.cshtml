

@model List<PracticalThirteenTest2.ViewModel.EmployeeCountByDesg>
@{
    ViewBag.Title = "View";
}

<h2 class="text-center">Get Employee Designation with count Using Linq</h2>
<div class="d-flex justify-content-center">
    <hr class="w-25" />
</div>
<table class="table table-striped table-hover" style="border-radius:10px !important;">
    <tr class="text-center table-dark">

        <th>
            @Html.DisplayNameFor(model => model[0].Designation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].EmpCount)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr class="text-center">

            <td>
                @Html.DisplayFor(modelItem => item.Designation)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.EmpCount)
            </td>

        </tr>
    }

</table>
<div>
    @Html.ActionLink("Back to List", "Index", String.Empty, new { @class = "btn btn-sm btn-primary" })
</div>